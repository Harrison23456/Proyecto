
<form action="/update/<%= User._id %>" method="POST">

	<div class="card">

	<h2>Actualizar</h2>
	<div class="section">
		<div class="title">Nombre de Usuario</div>
		<div class="field"><input type="text" value="<%= User.username %>" id="username" name="username"></div>
	</div>
	<div class="section">
		<div class="title">Contraseña</div>
		<div class="field"><input type="password" value="<%= User.password %>" id="password" name="password"></div>
	</div>
	<div class="section">
		<div class="title">Nombre</div>
		<div class="field"><input type="text" value="<%= User.nombre %>" id="nombre" name="nombre"></div>
	</div>

	<div class="section">
		<div class="title">Apellido</div>
		<div class="field"><input type="text" value="<%= User.apellido %>" id="apellido" name="apellido"></div>
	</div>
	<div class="section">
		<div class="title">Número</div>
		<div class="field"><input type="text" value="<%= User.phone %>" id="phone" name="phone"></div>
	</div>
	<div class="section">
		<div class="button"><input type="submit" value="Actualizar"></div>
		<div class="button"><a href="/signup">Volver</a></div>
	</div>
</div>